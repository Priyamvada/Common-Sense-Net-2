<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360px"
    android:layout_height="480px"
    android:orientation="vertical" >
    
    <!-- first row: id and help button -->
    <RelativeLayout 
        android:id="@+id/hmscrn_row1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">
        
        <TextView android:id="@+id/hmscrn_username"
            android:textSize="40dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Nagendra"
            android:layout_alignParentLeft="true"
            android:textColor="@android:color/black"
            android:layout_marginLeft="10dp"
            />
        <ImageButton android:src="@drawable/ic_90px_homscreen_question"
            	 	 android:layout_width="wrap_content" 
            	 	 android:layout_height="wrap_content" 
            	 	 android:id="@+id/hmscrn_help_button"
            	 	 android:layout_alignParentTop="true"
            	 	 android:layout_alignParentRight="true"
            	 	 android:padding="0dp"
            	 	 android:scaleType="fitXY"/>
        
    </RelativeLayout>
    <!-- 2nd row: photo, user menu -->
    <RelativeLayout android:id="@+id/hmscrn_row2"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:background="@android:color/white" >
        <ImageButton android:id="@+id/hmscrn_usr_icon"
            		 android:scaleType="fitXY"
            		 android:layout_height="150px"
            		 android:layout_width="120px"
            		 android:padding="0dp" 
            		 android:src="@drawable/farmer_90px_adam_jones"/>
        
        <RelativeLayout android:id="@+id/hmscrn_lay_btn_plots"
            android:layout_width="120px"
            android:layout_height="30px"
            android:layout_toRightOf="@id/hmscrn_usr_icon"
            android:gravity="center_vertical">
            
            <TextView android:id="@+id/hmscrn_txt_plots" 
                	  android:layout_width="wrap_content"
                	  android:layout_height="wrap_content"
                	  android:textColor="@android:color/black"
                	  android:text="my plots"
                	  android:textSize="18px"
                	  android:layout_margin="5px"/>
            
            <ImageView android:id="@+id/hmscrn_img_plots"
                	   android:scaleType="fitXY"
                	   android:src="@drawable/ic_32px_ground"
                	   android:layout_height="wrap_content"
                	   android:layout_width="wrap_content"
                	   android:layout_toRightOf="@id/hmscrn_txt_plots"
                	   android:layout_margin="5px"/>
            
            <Button android:background="@drawable/square_btn_transp"
                	android:id="@+id/hmscrn_btn_plots"
                	android:layout_height="fill_parent"
                	android:layout_width="fill_parent" />
        </RelativeLayout>

        <RelativeLayout android:id="@+id/hmscrn_lay_btn_diary"
            android:layout_width="150px"
            android:layout_height="50px"
            android:layout_toRightOf="@id/hmscrn_usr_icon"
            android:layout_below="@id/hmscrn_lay_btn_plots"
            android:layout_marginTop="5px">
            
            <TextView android:id="@+id/hmscrn_txt_diary"
                	  android:layout_width="wrap_content"
                	  android:layout_height="wrap_content"
                	  android:textColor="@android:color/black"
                	  android:text="my diary"
                	  android:textSize="18px"
                	  android:layout_marginTop="20px"
                	  android:layout_marginLeft="5px"/>
            
            <ImageView android:id="@+id/hmscrn_img_diary"
                	   android:scaleType="fitXY"
                	   android:src="@drawable/ic_64px_diary"
                	   android:layout_height="48px"
                	   android:layout_width="64px"
                	   android:layout_toRightOf="@id/hmscrn_txt_diary"
                	   android:layout_marginLeft="5px"/>
            
            <TextView android:id="@+id/hmscrn_lbl_diary_number"
                	  android:layout_width="20px"
                	  android:layout_height="20px"
                	  android:paddingLeft="1px"
                	  android:paddingTop="1px"
                	  android:text="15"
                	  android:textSize="15px"
                	  android:textColor="@android:color/black"
                	  android:background="@drawable/ic_24px_number_border"
                	  android:layout_alignBottom="@id/hmscrn_img_diary"
                	  android:layout_alignRight="@id/hmscrn_img_diary"
                	  android:layout_marginRight="20px"/>
            
        </RelativeLayout>
        
        <ImageButton android:id="@+id/hmscrn_btn_sound"
            		 android:src="@drawable/ic_71px_sound_on"
            		 android:layout_height="wrap_content"
            		 android:layout_width="wrap_content"
            		 android:background="@drawable/square_btn_transp"
            		 android:layout_alignParentRight="true"
            		 android:layout_alignParentTop="true"
            		 android:layout_marginTop="10px"/>
        
        <RelativeLayout android:id="@+id/hmscrn_lay_menu_btns"
            android:background="@drawable/bar_238px_menu"
            android:layout_width="248px"
            android:layout_height="49px"
            android:layout_marginLeft="5px"
            android:layout_marginTop="5px"
            android:layout_toRightOf="@id/hmscrn_usr_icon"
            android:layout_below="@id/hmscrn_lay_btn_diary">
            
            <Button android:id="@+id/hmscrn_btn_action_plant"
                	android:background="@drawable/square_btn_transp"
                	android:layout_width="27px"
                	android:layout_height="36px"
                	android:layout_marginTop="5px"
                	android:layout_marginLeft="10px"
                	/>
            
            <Button android:id="@+id/hmscrn_btn_action_fertilize"
                	android:background="@drawable/square_btn_transp"
                	android:layout_width="27px"
                	android:layout_height="36px"
                	android:layout_marginTop="5px"
                	android:layout_marginLeft="5px"
                	android:layout_toRightOf="@id/hmscrn_btn_action_plant"
                	/>
            
            <Button android:id="@+id/hmscrn_btn_action_irrigate"
                	android:background="@drawable/square_btn_transp"
                	android:layout_width="27px"
                	android:layout_height="36px"
                	android:layout_marginTop="5px"
                	android:layout_marginLeft="5px"
                	android:layout_toRightOf="@id/hmscrn_btn_action_fertilize"
                	/>
            
            <Button android:id="@+id/hmscrn_btn_action_report"
                	android:background="@drawable/square_btn_transp"
                	android:layout_width="27px"
                	android:layout_height="36px"
                	android:layout_marginTop="5px"
                	android:layout_marginLeft="5px"
                	android:layout_toRightOf="@id/hmscrn_btn_action_irrigate"
                	/>
            
            <Button android:id="@+id/hmscrn_btn_action_spray"
                	android:background="@drawable/square_btn_transp"
                	android:layout_width="27px"
                	android:layout_height="36px"
                	android:layout_marginTop="5px"
                	android:layout_marginLeft="5px"
                	android:layout_toRightOf="@id/hmscrn_btn_action_report"
                	/>
            
            <Button android:id="@+id/hmscrn_btn_action_yield"
                	android:background="@drawable/square_btn_transp"
                	android:layout_width="27px"
                	android:layout_height="36px"
                	android:layout_marginTop="5px"
                	android:layout_marginLeft="5px"
                	android:layout_toRightOf="@id/hmscrn_btn_action_spray"
                	/>
            
            <Button android:id="@+id/hmscrn_btn_action_sell"
                	android:background="@drawable/square_btn_transp"
                	android:layout_width="27px"
                	android:layout_height="36px"
                	android:layout_marginTop="5px"
                	android:layout_marginLeft="5px"
                	android:layout_toRightOf="@id/hmscrn_btn_action_yield"
                	/>
        </RelativeLayout>

    </RelativeLayout>
    
    
    <LinearLayout android:orientation="horizontal" android:id="@+id/hmscrn_lowerpart"
        		   android:layout_height="fill_parent"
        		   android:layout_width="fill_parent">
    	<!-- first column -->    
        <LinearLayout android:orientation="vertical" android:id="@+id/hmscrn_layout_notifs"
            android:layout_height="fill_parent"
            android:layout_width="120px"
            android:background="#f5eb5f"
            android:padding="2px"
            android:gravity="center_horizontal">
            
            <ImageButton android:id="@+id/hmscrn_imgbtn_notifs"
                		 android:background="@android:color/transparent"
            			 android:src="@drawable/ic_65px_news"
            			 android:layout_width="75px"
            			 android:scaleType="fitXY"
            			 android:layout_height="60px"
            			 />
            
      		<com.commonsensenet.realfarm.utils.FlowLayout
                android:id="@+id/hmscrn_linlay_notifs"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_gravity="center"
			    android:horizontalSpacing="10px"
			    android:verticalSpacing="10px" />

        </LinearLayout>

        <!-- 2nd column -->
		<LinearLayout android:orientation="vertical" android:id="@+id/hmscrn_layout_col2"
            android:layout_height="fill_parent"
            android:layout_width="120px"
            android:background="#cccccc"
            android:gravity="center_horizontal">
      		
				<LinearLayout android:orientation="vertical" android:id="@+id/hmscrn_layout_warnings"
		            android:layout_height="140px"
		            android:layout_width="120px"
		            android:background="#bdd777"
		            android:padding="2px"
		            android:gravity="center_horizontal">
		            
				    <ImageView android:id="@+id/hmscrn_img_warn_sign"
				        	   android:scaleType="fitXY"
				        	   android:src="@drawable/ic_64px_report"
				        	   android:layout_width="70px"
				        	   android:layout_height="60px"
				        	   android:layout_marginBottom="5px"
				        />
				    
				    <LinearLayout android:id="@+id/hmscrn_lay_report_notes"
				        android:layout_width="fill_parent"
				        android:layout_height="50px"
				        >
				        <!-- THIS GETS FILLED FROM CODE -->
				    </LinearLayout>
		        
		        </LinearLayout>
		        
				<LinearLayout android:orientation="vertical" android:id="@+id/hmscrn_layout_warnings"
		            android:layout_height="fill_parent"
		            android:layout_width="120px"
		            android:background="#bb9ac4"
		            android:padding="2px"
		            android:gravity="center_horizontal">
				    
				    <ImageView android:src="@drawable/ic_64px_cloudy"
				        android:id="@+id/hmscrn_img_weather"
				        android:scaleType="fitXY"
				        android:padding="10px"
				        android:layout_height="80px"
				        android:layout_width="80px"/>
				    
				    <TextView android:id="@+id/hmscrn_lbl_weather"
				        android:textSize="40px"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:textColor="@android:color/black"
				        android:textStyle="bold"
				        android:text="20 C"/>

				</LinearLayout>
        
        </LinearLayout>
	</LinearLayout>
    

</LinearLayout>