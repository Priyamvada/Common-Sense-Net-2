<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/header" >

        <ImageView
            android:id="@+id/aggr_img_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:src="@drawable/cloudy" />

        <TextView
            android:id="@+id/aggr_lbl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="Videos "
            android:textColor="@android:color/black"
            android:textSize="30dp" />

        <ImageButton
            android:id="@+id/aggr_img_home"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/home"
            android:src="@drawable/square_btn_transp" />

        <ImageButton
            android:id="@+id/aggr_img_help"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/help"
            android:src="@drawable/square_btn_transp" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/MainLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/def_img"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" >

        <TableRow
            android:id="@+id/seed_type_sow_tr"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/def_img" >

            <Button
                android:id="@+id/video1"
                android:layout_width="160dip"
                android:layout_height="80dip"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="5dp"
                android:text="Video 1"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/seed_type_sow_tr"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/def_img" >

            <Button
                android:id="@+id/video2"
                android:layout_width="160dip"
                android:layout_height="80dip"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="5dp"
                android:text="Video 2"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>
    </LinearLayout>

</LinearLayout>