        		</LinearLayout>

	            <Button 
	                android:id="@+id/home_btn_diary"
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:background="@drawable/square_btn_transp"/>

			</RelativeLayout>
			
			<!-- Market -->
			<RelativeLayout android:id="@+id/layout_cell8"
			    android:layout_width="155dp"
			    android:layout_height="fill_parent">
			    <ImageView android:id="@+id/homescreen_icon_market"
			        	   android:layout_width="60dp"
			        	   android:layout_height="60dp"
			        	   android:src="@drawable/ic_128px_market_temporary"
